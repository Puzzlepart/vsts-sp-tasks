{
    "manifestVersion": 1,
    "id": "build-release-sharepointtasks",
    "name": "SDB SharePoint Build and Release Tasks",
    "version": "0.0.0",
    "publisher": "SDB",
    "targets": [{
        "id": "Microsoft.VisualStudio.Services"
    }],
    "description": "Tasks related to Builds and Releases for SharePoint.",
    "categories": [
        "Build and release"
    ],
    "tags": [
        "SharePoint", "PnP",
        "xml", "deployment",
        "PowerShell"
    ],
    "icons": {
        "default": "Images/Icon128.png",
        "large": "Images/Icon512.png"
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "links": {
        "repository": {
            "uri": "https://devsdb.visualstudio.com/SDB-MCS/_git/ALM-TFSExt-SharePoint"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://devsdb.visualstudio.com/SDB-MCS/_git/ALM-TFSExt-SharePoint"
    },

    "screenshots": [{
            "path": "Images/deploySpArtifacts01.png"
        },
        {
            "path": "Images/deploySpArtifacts02.png"
        },
        {
            "path": "Images/deploySpArtifacts03.png"
        },
        {
            "path": "Images/deploySpArtifacts04.png"
        }
    ],
    "branding": {
        "color": "rgb(255,255,255)",
        "theme": "light"
    },
    "scopes": [
        "vso.build_execute"
    ],
    "files": [{
            "path": "DeploySharePointAddIn"
        },    
        {
            "path": "DeployArtifactsWithPnP"
        },
        {
            "path": "Images",
            "addressable": true
        }
    ],
    "contributions": [{
            "id": "SHH-SDB-TFS-DeploySharePointAddIn",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "DeploySharePointAddIn"
            }
        },
        {
            "id": "SHH-SDB-TFS-DeployArtifactsWithPnP",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "DeployArtifactsWithPnP"
            }
        }
    ]
}