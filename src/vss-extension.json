{
    "manifestVersion": 1,
    "id": "build-release-sharepointtasks",
    "name": "SharePoint Build and Release Tasks",
    "version": "0.1.0",
    "publisher": "Tuleva AG",
    "targets": [{
        "id": "Microsoft.VisualStudio.Services"
    }],
    "description": "Tasks for Builds and Releases related to SharePoint.",
    "categories": [
        "Build and release"
    ],
    "tags": [
        "SharePoint", "PnP",
        "xml", "deployment",
        "PowerShell"
    ],
    "icons": {
        "default": "Images/Icon128.png",
        "large": "Images/Icon512.png"
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "links": {
        "repository": {
            "uri": "https://tulevaag.visualstudio.com/Tuleva-ALM/_git/TFSExt-SharePoint"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://tulevaag.visualstudio.com/Tuleva-ALM/_git/TFSExt-SharePoint"
    },

    "screenshots": [{
            "path": "Images/deploySpArtifacts01.png"
        },
        {
            "path": "Images/deploySpArtifacts02.png"
        },
        {
            "path": "Images/deploySpArtifacts03.png"
        },
        {
            "path": "Images/deploySpArtifacts04.png"
        }
    ],
    "branding": {
        "color": "rgb(0,46,91)",
        "theme": "dark"
    },
    "scopes": [
        "vso.build_execute"
    ],
    "files": [    
        {
            "path": "DeployArtifactsWithPnP"
        },
        {
            "path": "Images",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "DeployArtifactsWithPnP",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "DeployArtifactsWithPnP"
            }
        }
    ]
}