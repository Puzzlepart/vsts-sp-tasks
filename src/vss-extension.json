    "screenshots": [{
            "path": "Images/deploySpArtifacts01.png"
        },
        {
            "path": "Images/deploySpArtifacts02.png"
        },
        {
            "path": "Images/deploySpArtifacts03.png"
        },
        {
            "path": "Images/deploySpArtifacts04.png"
        }
    ],
    "branding": {
        "color": "rgb(0,46,91)",
        "theme": "dark"
    },
    "scopes": [
        "vso.build_execute"
    ],
    "files": [    
        {
            "path": "DeployArtifactsWithPnP"
        },
        {
            "path": "PnPPowerShell"
        },
        {
            "path": "Images",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "DeployArtifactsWithPnP",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "DeployArtifactsWithPnP"
            }
        },
        {
            "id": "PnPPowerShell",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "PnPPowerShell"
            }
        }
    ]
